<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DaluiApp.Views.GenerationOptionsView"
             Title="GenerationOptionsView"
             BackgroundColor="#101216">

    <Grid Margin="25, 25, 0, 0" RowDefinitions=".2*, .1*, .1*, .3*, .2*, .1*">

        <VerticalStackLayout VerticalOptions="Center" Grid.Row="0">

            <Label Text="Select options" FontFamily="NexaHeavy" FontSize="30" TextColor="White" />

            <Label Margin="0, 10, 0, 0" Text="Minimum of 6 options" FontFamily="NexaLight" FontSize="20" TextColor="#ACB1BB" />

        </VerticalStackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Options}">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                
                <DataTemplate>
                    
                    <Grid HeightRequest="50" WidthRequest="150">
                        
                        <RoundRectangle CornerRadius="35" Fill="#242529"/>
                        
                        <Label Text="{Binding .}" VerticalOptions="Center" HorizontalOptions="Center" TextColor="White"/>
                        
                    </Grid>
                </DataTemplate>
                
            </CollectionView.ItemTemplate>
            
        </CollectionView>


        <Label Grid.Row="2" Text="Choose a style of picture" FontFamily="NexaHeavy" FontSize="20" TextColor="#ACB1BB" VerticalOptions="Center"/>

        <CollectionView Grid.Row="3" ItemsSource="{Binding Styles}" SelectionMode="Single">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                
                <DataTemplate>

                    <Grid HeightRequest="100" WidthRequest="100">

                        <Border StrokeShape="RoundRectangle 20,20,20,20" StrokeThickness="0">

                            <Image Source="{Binding ImageUrl}" />

                        </Border>

                        <Label 
                            Margin="0,0,0,10" FontFamily="NexaHeavy" FontSize="15" HorizontalTextAlignment="Center"
                            Text="{Binding Name}" VerticalOptions="End" TextColor="White" >

                            <Label.Shadow>
                                <Shadow Brush="Black" Opacity="1" Radius="1" Offset="5,5" />
                            </Label.Shadow>
                            
                        </Label>

                    </Grid>

                </DataTemplate>
                
            </CollectionView.ItemTemplate>
            
        </CollectionView>

        <Border
            Grid.Row="4" Margin="0,15,25,0" BackgroundColor="#242529"
            StrokeShape="RoundRectangle 20,20,20,20" StrokeThickness="0">
            
            <Editor Margin="5" BackgroundColor="#242529" TextColor="White" />
            
        </Border>

        <Button
            Grid.Row="5" BackgroundColor="#98C0FE" CornerRadius="25"
            HorizontalOptions="Center" Text="Generate" TextColor="Black"
            VerticalOptions="Center"  WidthRequest="150" />


    </Grid>
    
</ContentPage>